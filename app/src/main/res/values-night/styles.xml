<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar" />

	<style name="AppTheme.Beach">
		<item name="cardViewStyle">@style/CardView.Dark</item>

		<!-- for navigation and status bar to also be black -->
		<item name="android:windowTranslucentNavigation">true</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:fitsSystemWindows">true</item>

		<item name="colorPrimary">@color/darkerBlueGreen</item>
		<item name="colorPrimaryDark">@color/darkerBlue</item>
		<item name="colorOnPrimary">@android:color/white</item>

		<item name="colorSecondary">@color/darkSand</item>

		<item name="android:colorBackground">@android:color/black</item>
		<item name="colorSurface">@color/veryDarkGrey</item>
		<item name="colorAccent">@color/darkSand</item>

		<!-- for switches -->
		<item name="inactiveSwitchColor">@color/lightGrey</item>
		<item name="switchThumbColor">@color/darkSand</item>
	</style>

	<style name="AppTheme.Candy" parent="AppTheme.Beach">
		<item name="colorPrimary">@android:color/holo_purple</item>
	</style>

	<style name="AppTheme.Mint" parent="AppTheme.Beach">
		<item name="colorPrimary">@android:color/holo_green_dark</item>
	</style>

	<style name="AppTheme.Grey" parent="AppTheme.Beach">
		<item name="colorPrimary">@android:color/darker_gray</item>
	</style>
</resources>