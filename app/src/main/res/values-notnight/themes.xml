<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
		<item name="cardViewStyle">@style/CardView.Light</item>

		<!-- for navigation and status bar to also be white -->
		<item name="android:windowTranslucentNavigation">true</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:fitsSystemWindows">true</item>

		<item name="colorOnPrimary">@android:color/black</item>
		<item name="colorOnBackground">@android:color/black</item>

		<item name="inactiveSwitchColor">@color/grey</item>
	</style>

	<style name="AppTheme.Beach">
		<item name="colorPrimary">@color/seaBlue</item>
		<item name="colorPrimaryDark">@color/darkerBrightBlue</item>

		<item name="colorSecondary">@color/sand</item>
		<item name="colorSurface">@color/babyBlue</item>
		<item name="colorAccent">@color/sand</item>
		<item name="android:colorBackground">@color/lightSand</item>

		<item name="switchThumbColor">@color/sand</item>
	</style>

	<style name="AppTheme.Candy">
		<item name="colorPrimary">@color/lightPurple</item>
		<item name="colorPrimaryDark">@color/lightPurple2</item>

		<item name="colorSecondary">@color/lightOrange</item>
		<item name="colorSurface">@color/veryLightPurple</item>
		<item name="colorAccent">@color/lightOrange</item>
		<item name="android:colorBackground">@color/veryLightOrange</item>

		<item name="switchThumbColor">@color/lightOrange</item>
	</style>

	<style name="AppTheme.Mint">
		<item name="colorPrimary">@color/lightMint</item>
		<item name="colorPrimaryDark">@color/lightMint2</item>

		<item name="colorSecondary">@color/lightBrown</item>
		<item name="colorSurface">@color/veryLightMint</item>
		<item name="colorAccent">@color/lightBrown</item>
		<item name="android:colorBackground">@color/veryLightBrown</item>

		<item name="switchThumbColor">@color/lightBrown</item>
	</style>

	<style name="AppTheme.Grey">
		<item name="colorPrimary">@color/lightGrey1</item>
		<item name="colorPrimaryDark">@color/lightGrey2</item>

		<item name="colorSecondary">@color/lightGrey2</item>
		<item name="colorSurface">@color/lighterGrey</item>
		<item name="colorAccent">@color/lightGrey2</item>
		<item name="android:colorBackground">@color/lighterGrey2</item>

		<item name="switchThumbColor">@color/lightGrey2</item>
	</style>
</resources>