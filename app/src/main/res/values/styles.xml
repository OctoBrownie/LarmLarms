<resources>
	<!-- For component styles shared across light/dark modes -->

	<style name="ClockStyle" parent="Widget.MaterialComponents.TimePicker.Clock">
		<item name="android:textSize">24sp</item>
		<item name="android:textAlignment">center</item>
	</style>

	<style name="TimePickerStyle" parent="Widget.MaterialComponents.TimePicker">
		<item name="android:timePickerMode">spinner</item>
	</style>

	<style name="DatePickerStyle" parent="Widget.MaterialComponents.MaterialCalendar">
		<item name="android:datePickerMode">spinner</item>
		<item name="android:calendarViewShown">false</item>
	</style>

	<style name="SpinnerStyle" parent="Base.Widget.AppCompat.Spinner">
		<item name="android:textSize">@dimen/fontSizeBody</item>
		<!-- <item name="android:layout_gravity">bottom</item> -->

		<item name="android:layout_margin">@dimen/marginSizeDefault</item>
	</style>

	<style name="SeekBar" parent="Base.Widget.AppCompat.SeekBar">
		<item name="android:layout_margin">@dimen/marginSizeSmall</item>
		<item name="android:layout_gravity">center</item>
	</style>

	<style name="Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
		<item name="android:layout_margin">@dimen/marginSizeDefault</item>

		<item name="android:thumbTint">?attr/switchThumbColor</item>
		<item name="android:colorForeground">?attr/inactiveSwitchColor</item>
	</style>

	<!-- - - - - - - - - - - - - - - -  styles for Buttons  - - - - - - - - - - - - - - - - - - -->

	<style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
		<item name="android:textSize">@dimen/fontSizeBody</item>
		<item name="android:textColor">?attr/colorOnPrimary</item>
		<item name="android:background">@drawable/bordered_ripple</item>

		<item name="android:layout_marginLeft">@dimen/marginSizeSmall</item>
		<item name="android:layout_marginRight">@dimen/marginSizeSmall</item>
		<item name="android:layout_marginTop">@dimen/marginSizeSuperSmall</item>
		<item name="android:layout_marginBottom">@dimen/marginSizeSuperSmall</item>
	</style>

	<!-- NOTE: background color changing requires the button to be of type android.widget.Button
	instead of Button and type android.widget.ImageButton instead of ImageButton -->
	<style name="ButtonStyle.Borderless">
		<item name="android:background">@drawable/borderless_ripple</item>
		<item name="android:textColor">?attr/colorOnBackground</item>
	</style>

	<style name="ButtonStyle.ImageView">
		<item name="android:background">@drawable/bordered_ripple</item>
		<item name="android:scaleType">fitCenter</item>
		<item name="android:adjustViewBounds">true</item>
	</style>

	<style name="ButtonStyle.ImageView.Borderless">
		<item name="android:background">@drawable/borderless_ripple</item>
		<item name="android:textColor">?attr/colorOnBackground</item>
	</style>

	<!-- - - - - - - - - - - - - - - -  styles for TextViews  - - - - - - - - - - - - - - - -->

	<style name="TextStyle" parent="Widget.MaterialComponents.TextView">
		<item name="android:layout_margin">@dimen/marginSizeDefault</item>
		<item name="android:textSize">@dimen/fontSizeBody</item>
		<item name="android:textColor">?attr/colorOnBackground</item>
	</style>

	<style name="EditorDaysStyle" parent="TextStyle">
		<item name="android:layout_margin">@dimen/marginSizeSmall</item>
	</style>

	<style name="EditorLabelStyle" parent="TextStyle">
		<item name="android:layout_gravity">center_vertical</item>

		<item name="android:layout_marginTop">@dimen/marginSizeDefault</item>
		<item name="android:layout_marginBottom">@dimen/marginSizeDefault</item>
		<item name="android:layout_marginLeft">@dimen/marginSizeSmall</item>
		<item name="android:layout_marginRight">@dimen/marginSizeSmall</item>
	</style>

	<style name="EditorInputStyle" parent="EditorLabelStyle">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>

		<item name="android:minEms">10</item>
	</style>

	<style name="EditorOffsetInputStyle" parent="EditorLabelStyle">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>

		<item name="android:minEms">2</item>
		<item name="android:maxEms">5</item>
	</style>
</resources>
